@model IEnumerable<Modelo.Cadastros.Curso>

@{
    Layout = "_LayoutIES";
}

@section styles {
    <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Cursos Registrados
    </div>
    <div class="card-body">
        <table id="tabela_cursos">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>                        
                        @Html.DisplayNameFor(model => model.Departamento.Nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>                            
                            @Html.DisplayFor(modelItem => item.Departamento.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CursoID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.CursoID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.CursoID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Criar uma novo curso</a>
    </div>
</div>

@section ScriptPage
    {
    <script type="text/javascript" src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#tabela_cursos').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}